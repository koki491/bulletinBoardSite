<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespaceには対応するMapperインターフェースの完全修飾クラス名を指定 -->
<mapper namespace="bulletinBoard.repository.CustomerRepository">

    <!--Customerデーブル-->
    <select id="findAll" resultType="bulletinBoard.domain.Customer">
        select
        id,
        name,
        message,
        time
        from customers
    </select>
    <!-- MapperインターフェースのfindByEmail関数実行時のSQL
    parameterTypeには関数の引数の型を指定 -->
    <select id="findById" parameterType="string" resultType="Customer">
        select
        id,
        name,
        message,
        time
        from customers
        where id = #{id}
    </select>
    <!-- Mapperインターフェースのsave関数実行時のSQL
    新規で作成する場合はinsert要素を使用する -->
    <insert id="save" parameterType="Customer">
        INSERT INTO user (id, name, message, time)
        VALUES (#{id}, #{name}, #{message}, #{time})
    </insert>
</mapper>
